<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Application Settings" />
    
    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <Tab text="General">
            <VBox spacing="15.0">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
                
                <TitledPane text="Appearance" expanded="true">
                    <VBox spacing="10.0">
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <Label text="Theme:" />
                            <ComboBox promptText="Select Theme" />
                        </HBox>
                        
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <Label text="Font Size:" />
                            <ComboBox promptText="Select Size" />
                        </HBox>
                    </VBox>
                </TitledPane>
                
                <TitledPane text="Language" expanded="true">
                    <VBox spacing="10.0">
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <Label text="Application Language:" />
                            <ComboBox promptText="Select Language" />
                        </HBox>
                    </VBox>
                </TitledPane>
                
                <TitledPane text="Startup" expanded="true">
                    <VBox spacing="10.0">
                        <CheckBox text="Start application on system startup" />
                        <CheckBox text="Show welcome screen on startup" selected="true" />
                    </VBox>
                </TitledPane>
            </VBox>
        </Tab>
        
        <Tab text="Database">
            <VBox spacing="15.0">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
                
                <TitledPane text="Connection Settings" expanded="true">
                    <GridPane hgap="10.0" vgap="10.0">
                        <Label text="Database Host:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField text="localhost" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Port:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField text="27017" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Database Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField text="lifeandministry" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </GridPane>
                </TitledPane>
                
                <HBox spacing="10.0">
                    <Button text="Test Connection" />
                    <Button text="Backup Database" />
                    <Button text="Restore Database" />
                </HBox>
            </VBox>
        </Tab>
        
        <Tab text="About">
            <VBox spacing="15.0" alignment="CENTER">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
                
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Life and Ministry Application" />
                <Label text="Version 1.0.0" />
                <Label text="Â© 2023 JavSolutions" />
                <Label text="A tool for managing congregation activities" />
                
                <Button text="Check for Updates" />
            </VBox>
        </Tab>
    </TabPane>
    
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button text="Apply" />
        <Button text="Save" />
        <Button text="Cancel" />
    </HBox>
</VBox>