<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome to Life and Ministry" />
    <Label style="-fx-font-size: 16px;" text="A tool for managing congregation activities" />
    
    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #f8f8f8; -fx-background-radius: 5;">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Quick Actions" />
