<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javsolutions.jw.lifeandministry.controller.PublisherFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add New Publisher" />

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
        </columnConstraints>

        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Short Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="shortNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="genderComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Privilege:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <ComboBox fx:id="privilegeComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Matriculated:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <CheckBox fx:id="matriculatedCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="Active:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <CheckBox fx:id="activeCheckBox" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    </GridPane>

    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="saveButton" onAction="#onSaveButtonClick" text="Save" />
        <Button fx:id="clearButton" onAction="#onClearButtonClick" text="Clear" />
    </HBox>

    <Label fx:id="messageLabel" style="-fx-text-fill: green;" />
</VBox>
