<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Reports" />
    
    <HBox spacing="20.0" VBox.vgrow="ALWAYS">
        <!-- Report Options -->
        <VBox spacing="15.0" prefWidth="200.0">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Report Options" />
            
            <TitledPane text="Time Period" expanded="true">
                <VBox spacing="10.0">
                    <RadioButton text="Current Month" selected="true" />
                    <RadioButton text="Previous Month" />
                    <RadioButton text="Current Year" />
                    <RadioButton text="Custom Range" />
                    <HBox spacing="5.0">
                        <Label text="From:" />
                        <DatePicker />
                    </HBox>
                    <HBox spacing="5.0">
                        <Label text="To:" />
                        <DatePicker />
                    </HBox>
                </VBox>
            </TitledPane>
            
            <TitledPane text="Report Type" expanded="true">
                <VBox spacing="10.0">
                    <CheckBox text="Attendance" selected="true" />
                    <CheckBox text="Assignments" selected="true" />
                    <CheckBox text="Publisher Activity" />
                    <CheckBox text="Field Service" />
                </VBox>
            </TitledPane>
            
            <Button text="Generate Report" />
            <Button text="Export to PDF" />
            <Button text="Print Report" />
        </VBox>
        
        <!-- Report Content -->
        <TabPane tabClosingPolicy="UNAVAILABLE" HBox.hgrow="ALWAYS">
            <Tab text="Summary">
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    
                    <GridPane hgap="10.0" vgap="10.0">
                        <Label text="Total Publishers:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label text="45" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Average Attendance:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label text="38 (84%)" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Total Assignments:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label text="24" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </GridPane>
                    
                    <PieChart title="Attendance Breakdown" />
                </VBox>
            </Tab>
            <Tab text="Details">
                <TableView>
                    <columns>
                        <TableColumn text="Date" />
                        <TableColumn text="Meeting" />
                        <TableColumn text="Attendance" />
                        <TableColumn text="Assignments" />
                        <TableColumn text="Notes" />
                    </columns>
                </TableView>
            </Tab>
            <Tab text="Charts">
                <BarChart title="Monthly Comparison">
                    <xAxis>
                        <CategoryAxis label="Month" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Count" />
                    </yAxis>
                </BarChart>
            </Tab>
        </TabPane>
    </HBox>
</VBox>