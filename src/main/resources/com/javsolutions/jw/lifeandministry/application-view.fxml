<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainBorderPane" prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javsolutions.jw.lifeandministry.controller.ApplicationController">
    <top>
        <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Life and Ministry Application" />
        </HBox>
    </top>
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="150.0" spacing="10.0" style="-fx-background-color: #e0e0e0;">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <Label style="-fx-font-weight: bold;" text="Navigation" />
            <Button fx:id="homeButton" maxWidth="Infinity" onAction="#onHomeButtonClick" text="Home" />
            <Button fx:id="publishersButton" maxWidth="Infinity" onAction="#onPublishersButtonClick" text="Publishers" />
            <Button fx:id="scheduleButton" maxWidth="Infinity" onAction="#onScheduleButtonClick" text="Schedule" />
            <Button fx:id="reportsButton" maxWidth="Infinity" onAction="#onReportsButtonClick" text="Reports" />
            <Button fx:id="settingsButton" maxWidth="Infinity" onAction="#onSettingsButtonClick" text="Settings" />
            <Button fx:id="lifeAndMinistryButton" maxWidth="Infinity" onAction="#onLifeAndMinistryButtonClick" text="Life &amp; Ministry" />
        </VBox>
    </left>
    <center>
        <!-- Views will be loaded here dynamically -->
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="3.0" prefWidth="308.0" spacing="10.0" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label fx:id="statusLabel" text="Ready" />
        </HBox>
    </bottom>
</BorderPane>
