<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Meeting Schedule" />
    
    <HBox spacing="10.0">
        <Button text="Previous Month" />
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="January 2023" />
        <Button text="Next Month" />
    </HBox>
    
    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <Tab text="Weekly View">
            <VBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                
                <TableView VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Date" />
                        <TableColumn text="Chairman" />
                        <TableColumn text="Opening Prayer" />
                        <TableColumn text="Treasures" />
                        <TableColumn text="Gems" />
                        <TableColumn text="Living" />
                        <TableColumn text="Closing Prayer" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>
        <Tab text="Monthly View">
            <GridPane alignment="CENTER" hgap="5.0" vgap="5.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                
                <!-- Calendar headers (days of week) -->
                <Label text="Sunday" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label text="Monday" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Tuesday" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Label text="Wednesday" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                <Label text="Thursday" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                <Label text="Friday" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                <Label text="Saturday" GridPane.columnIndex="6" GridPane.rowIndex="0" />
                
                <!-- Calendar cells would be populated dynamically -->
            </GridPane>
        </Tab>
    </TabPane>
    
    <HBox spacing="10.0">
        <Button text="Add Assignment" />
        <Button text="Edit Assignment" />
        <Button text="Print Schedule" />
    </HBox>
</VBox>